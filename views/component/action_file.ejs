<div class="action">
    <ul class="d-flex flex-wrap">
      <li>
        <button id="uploadFile"
          class="btn border bg-light btn-sm ml-2"
          data-bs-toggle="modal" data-bs-target="#uploadModal">
          <i class="fa fa-upload" aria-hidden="true"></i>
          <span> Upload</span>
        </button>

      </li>

      <li>
        <button id="viewFile"
          class="btn border bg-light btn-sm ml-2 d-none ">
          <i class="fa fa-eye" aria-hidden="true"></i>
          <span>View</span>
        </button>
      </li>
      <li>

        <button id="dowloadFile"
          class="btn border bg-light btn-sm ml-2 d-none">
          <i class="fa fa-download" aria-hidden="true"></i>
          <span> Dowload</span>
        </button>
      </li>
      <li>
        <button id="editFile"
          class="btn border bg-light btn-sm ml-2 d-none">
          <i class="fas fa-edit    "></i>
          <span> Edit</span>
        </button>
      </li>
      <li>
        <button id="copyFile"
          class="btn border bg-light btn-sm ml-2 d-none">
          <i class="fas fa-copy    "></i>
          <span> Copy</span>
        </button>
      </li>
      <li>
        <button id="moveFile"
          class="btn border bg-light btn-sm ml-2 d-none">
          <img src="public/img/icon/folder_move_to_icon.png"
            width="16px" height="16px" alt>
          <span>Move</span>
        </button>
      </li>
      <li>
        <button id="renameFile"
          class="btn border bg-light btn-sm ml-2 d-none">
          <img src="public/img/icon/icons8-rename-50.png"
            width="16px" height="16px" alt>
          <span>Rename</span>
        </button>
      </li>
      <li>
        <button id="deleteFile"
          class="btn border bg-light btn-sm ml-2 d-none">
          <i class="fa fa-trash" aria-hidden="true"></i>
          <span>Delete</span>
        </button>
      </li>
      <li>
        <button id="shareFile"
          class="btn border bg-light btn-sm ml-2 d-none">
          <i class="fa fa-share" aria-hidden="true"></i>
          <span>Share</span>
        </button>
      </li>
    </ul>

  </div>